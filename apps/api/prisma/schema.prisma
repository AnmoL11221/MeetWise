generator client {
  provider = "prisma-client-js"
}

generator nestjs-dto {
  provider = "prisma-generator-nestjs-dto"
  output   = "../src/prisma/generated-dto"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              String    @id @default(cuid())
  clerkId         String    @unique
  email           String    @unique
  name            String?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  meetings        Meeting[] @relation("MeetingAttendees")
}

model Meeting {
  id            String    @id @default(cuid())
  title         String
  description   String?   // Meeting description/details
  scheduledAt   DateTime? // When the meeting is scheduled for
  isPrivate     Boolean   @default(true) // Whether the meeting is private
  roomAccess    String    @default("INVITE_ONLY") // INVITE_ONLY, PUBLIC, RESTRICTED
  agendaItems   Json?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  creatorId     String    // Now stores Clerk user ID
  attendees     User[]    @relation("MeetingAttendees")
}